<%= content_for(:page_title, "Grúpaí") %>
<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div data-controller="map" class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg" data-map-pins-value="<%= @pins.to_json %>">
        <div id="map" style="height:600px"></div>
      </div>
    </div>
    <% if current_user %>
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <%= link_to 'Grúpa nua', new_grupa_path, class: "bg-blue-400 text-white rounded font-lg mt-5 mr-1 mb-1 px-2 py-2 font-semibold" %>
      </div>
    <% end %>
  </div>
</div>
