<div class="flex flex-row">
  <div class="flex-shrink-0 w-64 bg-gray-100 p-4">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Search and Filter</h2>
    <form class="space-y-4">
      <div>
        <label for="search" class="block text-sm font-medium text-gray-700">Search</label>
        <div class="mt-1">
          <input type="text" id="search" name="search" class="py-2 px-3 border border-gray-300 rounded-md w-full">
        </div>
      </div>
      <div>
        <label for="voice" class="block text-sm font-medium text-gray-700">Voice</label>
        <div class="mt-1">
          <select id="voice" name="voice" class="py-2 px-3 border border-gray-300 rounded-md w-full">
            <option value="">All</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
      </div>
      <div class="text-right">
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600">Search</button>
      </div>
    </form>
  </div>
  <div class="flex-grow p-4">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Table</h2>
    <table class="w-full table-fixed">
      <thead>
        <tr class="bg-gray-100">
          <th class="w-1/4 py-2 px-4 border-gray-200">Gaelic</th>
          <th class="w-1/4 py-2 px-4 border-gray-200">English</th>
          <th class="w-1/4 py-2 px-4 border-gray-200">Voice</th>
        </tr>
      </thead>
      <tbody>
        <tr class="bg-white">
          <td class="py-2 px-4 border-gray-200">Gaelic 1</td>
          <td class="py-2 px-4 border-gray-200">English 1</td>
          <td class="py-2 px-4 border-gray-200">Male</td>
        </tr>
        <tr class="bg-gray-100">
          <td class="py-2 px-4 border-gray-200">Gaelic 2</td>
          <td class="py-2 px-4 border-gray-200">English 2</td>
          <td class="py-2 px-4 border-gray-200">Female</td>
        </tr>
        <!-- Add more rows here -->
      </tbody>
    </table>
  </div>
</div>
