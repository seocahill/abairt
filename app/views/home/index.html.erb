            <!-- Pyannote Status -->
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 <%= @pyannote_status&.up? ? 'bg-green-500' : 'bg-red-500' %> rounded-full"></div>
