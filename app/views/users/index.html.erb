<!-- Main Container -->
<div class="flex flex-col md:flex-row min-h-screen" data-controller="map" data-map-pins-value="<%= @pins.to_json %>" data-map-pubs-value="<%= @pubs.to_json %>">
  <!-- Left Side - Map Container (moves between desktop and modal) -->
  <div class="hidden md:block md:w-1/2" data-map-target="desktopContainer">
    <div id="map" class="h-screen w-full"></div>
  </div>

  <!-- Right Side - Users List -->
  <div class="w-full md:w-1/2 h-screen flex flex-col">
    <!-- Search and Filter Controls -->
    <div class="p-6 bg-white border-b">
      <div class="flex flex-col md:flex-row gap-4">
        <%= form_tag users_path, method: :get,
            class: "flex flex-col md:flex-row gap-4 w-full",
            data: { controller: "form", turbo_frame: "users" } do %>
          <div class="flex-1">
            <%= text_field_tag :search, params[:search],
                placeholder: "Search speakers...",
                class: "w-full px-4 py-2 border rounded-lg",
                data: { action: "input->form#submit" } %>
          </div>
          <div class="flex-none">
            <%= select_tag :dialect,
                options_for_select(User.dialects.keys.map { |d| [d.humanize, d] }, params[:dialect]),
                prompt: "Filter by dialect",
                class: "w-full md:w-auto px-4 py-2 border rounded-lg",
                data: { action: "change->form#submit" } %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Users List - Scrollable -->
    <div class="flex-1 overflow-y-auto px-6 py-4" data-controller="infinite-scroll">
      <%= turbo_frame_tag "users" do %>
        <div id="users-container" class="grid gap-6" data-infinite-scroll-target="container">
          <% @users.each do |user| %>
            <div class="bg-white rounded-lg shadow-lg p-6">
              <div class="flex items-start justify-between">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">
                    <%= link_to user.name, user_path(user), class: "hover:text-blue-600", data: { turbo: false } %>
                  </h3>
                  <div class="mt-2 space-y-2">
                    <div class="flex items-center text-sm text-gray-600">
                      <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4z" />
                        <path d="M5.5 9.643a.75.75 0 00-1.5 0V10c0 3.06 2.29 5.585 5.25 5.954V17.5h-1.5a.75.75 0 000 1.5h4.5a.75.75 0 000-1.5h-1.5v-1.546A6.001 6.001 0 0016 10v-.357a.75.75 0 00-1.5 0V10a4.5 4.5 0 01-9 0v-.357z" />
                      </svg>
                      <%= pluralize(user.voice_recordings.count, 'recording') %>
                    </div>
                    <div class="flex items-center text-sm text-gray-600">
                      <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                      </svg>
                      <%= pluralize(user.dictionary_entries.count, 'entry') %>
                    </div>
                    <% if user.dialect.present? %>
                      <div class="flex items-center text-sm text-gray-600">
                        <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
                        </svg>
                        <%= user.dialect.humanize %>
                      </div>
                    <% end %>
                  </div>
                </div>
                <% if user.lat_lang.present? %>
                  <div class="text-sm text-gray-500">
                    <svg class="w-5 h-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <%= render "shared/pagination", pagy: @pagy, infinite_scroll: true %>
      <% end %>
    </div>
  </div>

  <!-- Mobile Map Toggle Button -->
  <button class="md:hidden fixed bottom-4 right-4 bg-blue-600 text-white p-3 rounded-full shadow-lg z-50"
          data-action="click->map#openModal">
    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
    </svg>
  </button>

  <!-- Mobile Map Modal -->
  <div class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50"
       data-map-target="modal">
    <div class="relative w-full h-full">
      <!-- Close button -->
      <button class="absolute top-4 right-4 z-50 bg-white p-2 rounded-full shadow-lg"
              data-action="click->map#closeModal">
        <svg class="w-6 h-6 text-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <!-- Map container will be moved here when modal is open -->
      <div data-map-target="modalContainer" class="w-full h-full"></div>
    </div>
  </div>
</div>

