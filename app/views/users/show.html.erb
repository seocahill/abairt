<!-- Primary Content Area: Two Rectangles -->


<!-- Main Container -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" id="user_<%= @user.id %>">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden" data-controller="map" data-map-user-id-value="<%= @user.id %>">
    <!-- User Header -->
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-start justify-between">
        <div class="flex items-center gap-2">
          <h1 class="text-2xl font-bold text-gray-900"><%= @user.name %></h1>
          <span class="bg-green-200 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded"><%= @user.role.humanize %></span>
        </div>
    <% if admin_user? %>
          <div class="flex gap-3">
            <%= link_to "Users", admin_users_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
            <%= link_to "RÃ­omhphoist", admin_emails_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
        <% end %>
      </div>
      <div class="mt-2">
        <%= render "users/inline_edit", model: @user, method: :about, current_user: current_user do %>
          <p class="text-gray-600"><%= @user.about.present? ? @user.about : "Not specified" %></p>
        <% end %>
      </div>
    </div>

    <!-- Profile Information -->
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Left Column -->
        <div class="space-y-6">
          <% if current_user == @user %>
            <div>
              <h3 class="text-sm font-medium text-gray-500">Email</h3>
              <div class="mt-1">
                <%= render "users/inline_edit", model: @user, method: :email, current_user: current_user do %>
                  <p class="text-base text-gray-900"><%= @user.email %></p>
                <% end %>
              </div>
            </div>
          <% end %>

          <div>
            <h3 class="text-sm font-medium text-gray-500">Voice</h3>
            <div class="mt-1">
              <%= render "users/inline_edit", model: @user, method: :voice, current_user: current_user do %>
                <p class="text-base text-gray-900"><%= @user.voice || "Not specified" %></p>
              <% end %>
            </div>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500">Language Ability</h3>
            <div class="mt-1">
              <%= render "users/inline_edit", model: @user, method: :ability, current_user: current_user do %>
                <p class="text-base text-gray-900"><%= @user.ability&.humanize || "Not specified" %></p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="space-y-6">
          <div>
            <h3 class="text-sm font-medium text-gray-500">Dialect</h3>
            <div class="mt-1">
              <%= render "users/inline_edit", model: @user, method: :dialect, current_user: current_user do %>
                <p class="text-base text-gray-900"><%= @user.dialect&.humanize || "Not specified" %></p>
              <% end %>
            </div>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500">Location</h3>
            <div class="mt-1 flex items-center">
              <%= render "users/inline_edit", model: @user, method: :address, current_user: current_user do %>
                <p class="text-base text-gray-900"><%= @user.address || "Not specified" %></p>
              <% end %>
              <% if policy(@user).update? %>
                <button type="button" class="ml-2" data-action="click->map#openModal">
                  <svg class="w-5 h-5 text-blue-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- API Token Section (Admin/API User only, own profile) -->
      <% if (current_user&.admin? || current_user&.api_user?) && current_user == @user %>
        <div class="mt-8 pt-6 border-t border-gray-200" data-controller="swagger-ui" data-swagger-ui-openapi-url-value="<%= api_openapi_path(format: :json) %>" data-swagger-ui-api-token-value="<%= @user.api_token if @user.api_token.present? %>">
          <h3 class="text-lg font-medium text-gray-900 mb-4">API Access</h3>
          <div class="bg-gray-50 rounded-lg p-4 mb-4">
            <% if @user.api_token.present? %>
              <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Your API Token</label>
                <div class="flex items-center gap-2">
                  <code class="flex-1 bg-white px-3 py-2 rounded border border-gray-300 text-sm font-mono break-all" id="api-token"><%= @user.api_token %></code>
                  <button data-action="click->swagger-ui#copyToken" class="px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">Copy</button>
                </div>
                <p class="text-xs text-gray-500 mt-2">Keep this token secure. It provides full API access.</p>
              </div>
              <div class="flex gap-2">
                <%= button_to "Regenerate Token", regenerate_api_token_user_path(@user), method: :post, class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 text-sm", data: { confirm: "Are you sure? This will invalidate your current token." } %>
                <%= button_to "Revoke Token", revoke_api_token_user_path(@user), method: :delete, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 text-sm", data: { confirm: "Are you sure?" } %>
              </div>
            <% else %>
              <p class="text-sm text-gray-600 mb-4">No API token has been generated. Generate one to access the API.</p>
              <%= button_to "Generate API Token", generate_api_token_user_path(@user), method: :post, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 text-sm" %>
            <% end %>
          </div>

          <!-- Swagger UI -->
          <div class="mt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">API Documentation</h3>
            <div id="swagger-ui" class="border border-gray-200 rounded-lg overflow-hidden"></div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Map Modal -->
    <div id="mapModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden" style="z-index: 999;" data-map-target="modal">
      <div class="relative top-20 mx-auto p-5 border w-3/4 shadow-lg rounded-md bg-white">
        <div class="flex justify-between items-center">
          <h3 class="text-lg font-medium text-gray-900">Select Location</h3>
          <button class="text-gray-500 hover:text-gray-700" data-action="click->map#closeModal">
            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div id="map" class="h-[600px] md:min-h-[50%] lg:min-h-[75%] mt-4" data-map-target="modalContainer"></div>
        <div class="mt-4 flex justify-end">
          <button class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600" data-action="click->map#saveLocation">
            Save Location
          </button>
        </div>
      </div>
    </div>

    <%= form_with model: @user, local: true do |form| %>
      <%= form.hidden_field :lat_lang, id: "user-lat-lang", value: @user.lat_lang %>
    <% end %>
  </div>
</div>

<% if (current_user&.admin? || current_user&.api_user?) && current_user == @user %>
  <% content_for :head do %>
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/swagger-ui-dist@5.9.0/swagger-ui.css" />
    <script src="https://unpkg.com/swagger-ui-dist@5.9.0/swagger-ui-bundle.js"></script>
    <script src="https://unpkg.com/swagger-ui-dist@5.9.0/swagger-ui-standalone-preset.js"></script>
  <% end %>
<% end %>
