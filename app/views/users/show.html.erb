<div class="w-full md:w-1/4 p-4"  data-controller="sidebar">
  <% if current_user&.admin? %>
  <h2>
    <%= link_to 'Courses', courses_path, type: "button", class: 'flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3' %>
  </h2>
  <h2>
    <%= link_to 'Articles', articles_path, type: "button", class: 'flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3' %>
  </h2>
  <% end %>
  <% if current_user&.admin? %>
    <h2>
      <%= link_to "Database Admin", madmin_user_path, type: "button", class: 'flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3' %>
    </h2>
  <% end %>
</div>
<!-- Primary Content Area: Two Rectangles -->
<div class="w-full md:w-3/4 p-4">
  <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <%= render "profile" %>
    <% if current_user&.admin? %>
      <%= render "pending_approvals" %>
    <% end %>
    <%= render "contributions" %>
  </div>
</div>

<!-- Main Container -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- User Header -->
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-start justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @user.name %></h1>
          <div class="mt-2 space-y-2">
            <% if @user.dialect.present? %>
              <div class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
                </svg>
                <span>Dialect: <%= @user.dialect.humanize %></span>
              </div>
            <% end %>
            <% if @user.lat_lang.present? %>
              <div class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
                <span>Location: <%= @user.lat_lang %></span>
              </div>
            <% end %>
          </div>
        </div>
        <% if policy(@user).edit? %>
          <%= link_to edit_user_path(@user), class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Contributions Section -->
    <div class="p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Contributions</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Voice Recordings Card -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">Voice Recordings</h3>
            <span class="text-2xl font-bold text-blue-600"><%= @user.voice_recordings.count %></span>
          </div>
          <p class="mt-2 text-sm text-gray-600">Total recordings contributed</p>
          <%= link_to voice_recordings_path(search: @user.name),
              class: "mt-4 inline-flex items-center text-sm text-blue-600 hover:text-blue-800" do %>
            View all recordings
            <svg class="ml-1 w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>

        <!-- Dictionary Entries Card -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">Dictionary Entries</h3>
            <span class="text-2xl font-bold text-blue-600"><%= @user.dictionary_entries.count %></span>
          </div>
          <p class="mt-2 text-sm text-gray-600">Total entries contributed</p>
          <%= link_to dictionary_entries_path(search: @user.name),
              class: "mt-4 inline-flex items-center text-sm text-blue-600 hover:text-blue-800" do %>
            View all entries
            <svg class="ml-1 w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
