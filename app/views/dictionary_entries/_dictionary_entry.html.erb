<%= turbo_frame_tag dom_id(dictionary_entry), class: "table-row" do %>
  <div class="table-cell px-6 py-4 whitespace-nowrap"><%= dictionary_entry.word_or_phrase %></div>
  <div class="table-cell px-6 py-4 whitespace-nowrap"><%= dictionary_entry.translation %></div>
  <div class="table-cell px-6 py-4 whitespace-nowrap"><%= dictionary_entry.notes %></div>
  <div class="table-cell px-6 py-4 whitespace-nowrap">
    <% if dictionary_entry.media.attached? && (dictionary_entry.media.audio? ||  dictionary_entry.media.video?) %>
      <%= tag :audio, src: url_for(dictionary_entry.media), controls: true, preload: :none, class: 'mt-3' %>
    <% end %>
  </div>
  <% if current_user %>
    <div class="table-cell px-6 py-4 whitespace-nowrap"><%= link_to 'Edit', edit_dictionary_entry_path(dictionary_entry) %></div>
    <div class="table-cell px-6 py-4 whitespace-nowrap"><%= button_to 'Destroy', dictionary_entry_path(dictionary_entry), method: :delete %></div>
  <% end %>
<% end %>
