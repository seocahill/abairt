<div class="flex flex-col items-center justify-center h-screen">
  <div class="max-w-md w-full space-y-8">
    <img src="<%= image_path('person-speaking.jpg') %>" alt="hero image">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Cláraigh / Sign up
    </h2>

    <%= form_with(model: @user, url: registrations_path) do |form| %>
      <div class="rounded-md shadow-sm -space-y-px mb-4">
        <%= form.label "Ainm / Name" %>
        <%= form.text_field :name, required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
      </div>

      <div class="rounded-md shadow-sm -space-y-px mb-4">
        <%= form.label "Ríomhphost / Email", class: "" %>
        <%= form.email_field :email, required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
      </div>

      <div class="rounded-md shadow-sm -space-y-px mb-4">
        <%= form.label "Fút / About", class: "" %>
        <%= form.text_area :about, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
      </div>

      <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Cláraigh / Sign up
      </button>
    <% end %>
  </div>
</div>