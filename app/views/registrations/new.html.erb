<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<div class="flex flex-col items-center justify-center h-screen">
  <div class="max-w-md w-full space-y-8">
    <img src="<%= image_path('person-speaking.jpg') %>" alt="hero image">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Cláraigh / Sign up
    </h2>

    <% session[:form_start_time] = Time.current %>
    <%= form_with(model: @user, url: registrations_path, id: "claraigh") do |form| %>
      <div class="g-recaptcha" data-sitekey="<%= Rails.application.credentials.dig(:recaptcha_key) %>"></div>
      <br/>
      <p class="hidden">
        <label>
          Don't fill this out if you're human: <input name="bot-field" autocomplete="off" aria-hidden="true">
        </label>
      </p>
      <div style="position: absolute; left: -9999px;">
        <label>Website (optional): <input name="website" autocomplete="off" tabindex="-1"></label>
        <label>Phone (optional): <input name="phone" autocomplete="off" tabindex="-1"></label>
        <label>Company (optional): <input name="company" autocomplete="off" tabindex="-1"></label>
      </div>
      <div class="rounded-md shadow-sm -space-y-px mb-4">
        <%= form.label "Ainm / Name" %>
        <%= form.text_field :name, required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
      </div>

      <div class="rounded-md shadow-sm -space-y-px mb-4">
        <%= form.label "Ríomhphost / Email", class: "" %>
        <%= form.email_field :email, required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
      </div>

      <div class="rounded-md shadow-sm -space-y-px mb-4">
        <%= form.label "Fút / About", class: "" %>
        <%= form.text_area :about, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", required: true %>
      </div>

      <button
        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Cláraigh / Sign up
      </button>
    <% end %>
  </div>
</div>

