<!-- app/views/user_mailer/password_reset_email.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
  </head>
  <body>
    <h1>Login Instructions</h1>
    <p>Hello <%= @user.email %>,
      <%= link_to "you can login to Abairt by clicking on this link.", login_with_token_url(@user.password_reset_token) %>
    </p>
    <p>If the link doesn't work copy and paste this url into your web browser address bar: <%= password_resets_new_url %></p>
    <p>And enter this token to log in: <%= @user.password_reset_token %></p>
    <p>Thank you!</p>
  </body>
</html>
