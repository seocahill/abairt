<!-- app/views/user_mailer/login_email.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
  </head>
  <body>
    <h1>Login Instructions</h1>
    <p>Hello <%= @user.email %>,
      <%= link_to "you can login to Abairt by clicking on this link.", login_with_token_url(@user.login_token) %>
    </p>
    <p>If the link doesn't work copy and paste this url into your web browser address bar: <%= new_login_request_url %></p>
    <p>And enter this token to log in: <%= @user.login_token %></p>
    <p>This is a passwordless login system. You don't need a password - just click the link above.</p>
    <p>Thank you!</p>
  </body>
</html>
