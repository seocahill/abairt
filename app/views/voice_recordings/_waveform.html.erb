
 <turbo-frame id="wave_display" class="w-full">
  <div id="wave-controller" data-controller="transcription" data-transcription-media-value="<%= @recording.media.url if @recording&.media&.attached? %>" data-transcription-regions-value="<%= @regions %>" data-transcription-autoplay-value="<%= action_name == "preview" %>" data-transcription-peaks-value="voice_recordings/<%= @recoding&.id %>/peaks">
    <!-- Waveform -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:space-y-4 sm:space-x-4 sm:p-4">
      <% if @recording&.media&.video? %>
        <%= video_tag(@recording.media.url, class: "h-auto sm:max-h-40 w-auto", data: { "transcription-target": "video" }) %>
      <% end %>
      <% if @recording %>
        <div id="waveform" class="flex-grow" data-transcription-target="waveform"></div>
      <% else %>
        <p>You need to load a video or audio recording.</p>
      <% end %>
    </div>

    <div class="flex items-center sm:space-x-4 sm:p-4 w-full">
      <div class="flex flex-col sm:space-y-4 w-full">
        <!-- Subtitles display -->
        <div id="subtitles" class="space-x-4 p-6 bg-gray-900 text-white w-full">
          <p class="text-white text-xl sm:text-4xl" data-target="transcription.transcription">Transcript of <%= @recording&.title %></p>
          <p><i class="text-white text-xl sm:text-base" data-target="transcription.translation"><%= @recording&.description %></i></p>
        </div>

        <!-- Control Bar -->
        <div class="p-2 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4 p-2 w-full justify-between">
            <div class="flex flex-row space-x-4 w-full sm:w-auto mb-2">
              <button id="play-pause-button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-not-allowed w-full" data-action="click->transcription#play">
                No File
              </button>
              <button id="speed-button" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded w-full" data-action="click->transcription#slower">
                Slower
              </button>
            </div>
            <div class="flex flex-row space-x-4 w-full sm:w-auto mb-2">
              <label class="flex items-center space-x-2">
                <span class="ml-2 text-gray-900">Subtitles on/off</span>
                <input id="toggle-english" type="checkbox" class="form-checkbox" checked data-target="transcription.engSubs">
                <span class="ml-2 text-gray-700">English</span>
              </label>
              <label class="flex items-center space-x-2">
                <input id="toggle-irish" type="checkbox" class="form-checkbox" checked data-target="transcription.gaeSubs">
                <span class="ml-2 text-gray-700">Irish</span>
              </label>
            </div>
            <label class="flex items-center space-x-2">
              <span class="ml-2 text-gray-700">Zoom</span>
              <input data-action="input->transcription#zoom" type="range" min="0" max="100" value="50" class="w-full">
            </label>
            <label class="flex items-center space-x-2">
              <span lass="ml-2 text-gray-700" data-feather="watch">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-watch"><circle cx="12" cy="12" r="7"></circle><polyline points="12 9 12 12 13.5 13.5"></polyline><path d="M16.51 17.35l-.35 3.83a2 2 0 0 1-2 1.82H9.83a2 2 0 0 1-2-1.82l-.35-3.83m.01-10.7l.35-3.83A2 2 0 0 1 9.83 1h4.35a2 2 0 0 1 2 1.82l.35 3.83"></path></svg>
              </span>
              <p id="current-seek-position" data-target="transcription.time" class="w-12 text-right sm:w-auto"> 0.0 </p>
            </label>
          </div>
        </div>

        <!-- Separated Control Bar -->
        <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4 p-4 w-full justify-between bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mt-4">
          <% if action_name == "show" %>
            <%= link_to @recording.prev, data: { turbo: false } do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left-circle"><circle cx="12" cy="12" r="10"></circle><polyline points="12 8 8 12 12 16"></polyline><line x1="16" y1="12" x2="8" y2="12"></line></svg>
            <% end %>
            <% if policy(@recording).edit? && @recording.diarization_data.blank? %>
              <%= button_to voice_recording_diarization_path(@recording),
                  method: :post,
                  class: "bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded flex items-center space-x-2",
                  data: { turbo_confirm: "Start diarization?" } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-layers"><polygon points="12 2 2 7 12 12 22 7 12 2"></polygon><polyline points="2 17 12 22 22 17"></polyline><polyline points="2 12 12 17 22 12"></polyline></svg>
                <span>Start Diarization</span>
              <% end %>
            <% end %>
          <% end %>
            <% if policy(@recording).edit? %>
              <%= link_to edit_voice_recording_path(@recording), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex items-center space-x-2", data: { turbo: false } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                <span>Edit Recording</span>
              <% end %>
            <% end %>
            <% if action_name == "show" %>

            <% if policy(@recording).edit? %>
              <%= button_to add_region_voice_recording_path(@recording), method: :post, class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded flex items-center space-x-2" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus-square"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>
                <span>Add New Segment</span>s
                <input type="hidden" id="prev-position" name="voice_recording[region_start]">
                <input type="hidden" id="current-position" name="voice_recording[region_end]">
                <input type="hidden" id="dictionary_entry_region_id" name="voice_recording[region_id]">
              <% end %>
            <% end %>

            <% if current_user && @recording&.media&.attached? %>
              <%= link_to rails_blob_path(@recording.media, disposition: "attachment"), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded flex items-center space-x-2", data: { turbo: false } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-download"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
                <span>Download Media</span>
              <% end %>
            <% end %>

            <%= link_to voice_recording_speakers_path(@recording), class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded flex items-center space-x-2", data: { turbo: false } do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
              <span>Manage Speakers</span>
            <% end %>
            <%= link_to @recording.next, data: { turbo: false } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right-circle"><circle cx="12" cy="12" r="10"></circle><polyline points="12 16 16 12 12 8"></polyline><line x1="8" y1="12" x2="16" y2="12"></line></svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
