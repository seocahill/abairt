
 <turbo-frame id="wave_display" class="w-full">
  <div id="wave-controller" data-controller="transcription" data-transcription-media-value="<%= @recording.media.url if @recording&.media&.attached? %>" data-transcription-regions-value="<%= @regions %>" data-transcription-peaks-value="<%= @recording&.peaks || [] %>">
    <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4 p-4">
      <% if @recording&.media&.video? %>
        <%= video_tag(@recording.media.url, size: "200", data: { "transcription-target": "video" }) %>
      <% end %>
      <% if @recording %>
        <div id="waveform" class="flex-grow" data-transcription-target="waveform"></div>
      <% else %>
        <p>You need to load a video or audio recording.</p>
      <% end %>
    </div>

    <div class="flex items-center space-x-4 p-4 w-full">
      <div class="flex flex-col space-y-4 w-full">
        <div id="subtitles" class="space-x-4 p-6 bg-gray-900 text-white w-full">
          <p class="text-white text-4xl" data-target="transcription.transcription">Transcript of <%= @recording&.title %></p>
          <p><i class="text-white text-xl" data-target="transcription.translation"><%= @recording&.description %></i></p>
        </div>
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4 p-4 w-full">
            <button id="play-pause-button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" data-action="click->transcription#play">
              Play
            </button>
            <button id="speed-button" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" data-action="click->transcription#slower">
              Slow down
            </button>
            <label class="flex items-center space-x-2">
              <input id="toggle-english" type="checkbox" class="form-checkbox" checked data-target="transcription.engSubs">
              <span class="ml-2 text-gray-700">English Subtitles</span>
            </label>
            <label class="flex items-center space-x-2">
              <input id="toggle-irish" type="checkbox" class="form-checkbox" checked data-target="transcription.gaeSubs">
              <span class="ml-2 text-gray-700">Irish Subtitles</span>
            </label>
            <label class="flex items-center space-x-2">
              <span class="ml-2 text-gray-700">Zoom</span>
              <input data-action="input->transcription#zoom" type="range" min="0" max="100" value="50">
            </label>
            <label class="flex items-center space-x-2">
              <span class="ml-2 text-gray-700">Playhead:</span>
              <p data-target="transcription.time">0.0 </p>
            </label>
            <% if policy(@recording).edit? && action_name == "show" %>
              <%= link_to "edit", edit_voice_recording_path(@recording), class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded", data: { turbo: false }  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
