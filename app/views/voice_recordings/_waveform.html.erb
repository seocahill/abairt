<!-- Media Player Container -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden"
     data-controller="waveform"
     data-waveform-url-value="<%= @recording.media.url if @recording&.media&.attached? %>"
     data-waveform-regions-url-value="<%= regions_voice_recording_path(@recording) if @recording %>"
     data-waveform-edit-mode-value="false"
     data-waveform-entry-update-url-template-value="<%= @recording ? voice_recording_dictionary_entry_path(@recording, 'ENTRY_ID') : '' %>">

  <!-- Video Display (if video) -->
  <% if @recording&.media&.video? %>
    <div class="w-full bg-gray-900">
      <%= video_tag(@recording.media.url,
                    class: "mx-auto max-h-[300px]",
                    data: { waveform_target: "video" },
                    crossorigin: "anonymous") %>
    </div>
  <% end %>

  <!-- Waveform Display -->
  <div class="px-4 pt-4">
    <% if @recording&.media&.attached? %>
      <div data-waveform-target="waveform" class="w-full" style="height: 80px;"></div>
      <!-- Timeline ruler (populated by WaveSurfer TimelinePlugin) -->
      <div data-waveform-target="timelineContainer" class="w-full"></div>
    <% elsif @recording&.import_status&.in?(['pending', 'processing']) %>
      <div class="flex items-center justify-center h-24 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
        <div class="text-center">
          <svg class="animate-spin h-8 w-8 text-gray-400 mx-auto mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <p class="text-gray-500 text-sm">
            <%= @recording.import_status == 'pending' ? 'Import queued...' : 'Importing audio file...' %>
          </p>
        </div>
      </div>
    <% elsif @recording&.import_status == 'failed' %>
      <div class="flex items-center justify-center h-24 bg-red-50 rounded-lg border-2 border-dashed border-red-300">
        <div class="text-center">
          <svg class="h-8 w-8 text-red-400 mx-auto mb-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
          <p class="text-red-600 text-sm">Import failed</p>
        </div>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-4">No media file attached</p>
    <% end %>
  </div>

  <!-- Main Controls -->
  <div class="border-t border-gray-200 px-4 py-3 mt-2">
    <div class="flex items-center gap-4 flex-wrap">

      <!-- Play/Pause Button -->
      <button data-waveform-target="playButton"
              data-action="click->waveform#play"
              class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-1.5 rounded-lg flex items-center gap-2 min-w-[90px] justify-center disabled:opacity-50 text-sm"
              disabled>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
        </svg>
        <span>Play</span>
      </button>

      <!-- Time Display -->
      <span data-waveform-target="timeDisplay" class="font-mono text-sm text-gray-600 min-w-[48px]">0:00</span>

      <!-- Speed -->
      <div class="flex items-center gap-1.5">
        <label class="text-xs text-gray-500 whitespace-nowrap">Speed</label>
        <select data-waveform-target="speed"
                data-action="change->waveform#changeSpeed"
                class="form-select rounded border-gray-300 text-xs py-1">
          <option value="0.5">0.5×</option>
          <option value="0.75">0.75×</option>
          <option value="1.0" selected>1×</option>
          <option value="1.25">1.25×</option>
          <option value="1.5">1.5×</option>
          <option value="2.0">2×</option>
        </select>
      </div>

      <!-- Zoom Control -->
      <div class="flex items-center gap-1.5 flex-1 min-w-[160px]">
        <!-- zoom-out icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/><line x1="8" y1="11" x2="14" y2="11"/>
        </svg>
        <input type="range"
               data-waveform-target="zoom"
               data-action="input->waveform#zoom"
               class="flex-1 h-1.5 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-indigo-600"
               min="1"
               max="500"
               value="1">
        <!-- zoom-in icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/><line x1="11" y1="8" x2="11" y2="14"/><line x1="8" y1="11" x2="14" y2="11"/>
        </svg>
        <!-- Fit-to-screen button -->
        <button data-action="click->waveform#resetZoom"
                title="Fit full recording to screen"
                class="text-gray-400 hover:text-indigo-600 transition-colors flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L17 13.586V12a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>

      <!-- Edit mode toggle (only for authorized users on show page) -->
      <% if @recording && policy(@recording).update? %>
        <button data-waveform-target="editButton"
                data-action="click->waveform#toggleEditMode"
                title="Edit segment boundaries"
                class="text-gray-400 hover:text-gray-600 transition-colors flex-shrink-0 ml-auto">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L17 13.586V12a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        </button>
      <% end %>

      <% if @regions.present? && controller.action_name == "index" %>
        <div class="flex items-center gap-3 ml-auto">
          <label class="flex items-center gap-1.5 text-sm">
            <input type="checkbox" data-waveform-target="gaeSubs" checked class="form-checkbox h-4 w-4 text-blue-600 rounded">
            <span class="text-gray-700">Ga</span>
          </label>
          <label class="flex items-center gap-1.5 text-sm">
            <input type="checkbox" data-waveform-target="engSubs" checked class="form-checkbox h-4 w-4 text-blue-600 rounded">
            <span class="text-gray-700">En</span>
          </label>
        </div>
      <% end %>

    </div>
  </div>
</div>
