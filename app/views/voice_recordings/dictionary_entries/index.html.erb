<div id="wave-controller" class="container mx-auto px-4 py-8" data-controller="transcription"
     data-transcription-media-value="<%= url_for(@recording.media) if @recording.media.attached? %>"
     data-transcription-regions-url-value="<%= regions_voice_recording_path(@recording) %>">
  <div class="bg-white rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">
        <%= link_to voice_recording_path(@recording), class: "text-blue-600 hover:text-blue-800" do %>
          Transcribing: <%= @recording.title %>
        <% end %>
      </h1>
    </div>

    <!-- Waveform Player -->
    <div class="mb-8">
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <div class="p-4">
          <div id="waveform" data-transcription-target="waveform" class="w-full h-32"></div>
        </div>
        <div class="border-t border-gray-200 p-4">
          <div class="flex items-center justify-between">
            <!-- Left Controls -->
            <div class="flex items-center gap-4">
              <button id="play-pause-button"
                      data-action="transcription#play"
                      class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 min-w-[100px] justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                </svg>
                <span>Loading...</span>
              </button>
              <div data-transcription-target="time" class="font-mono text-gray-600">0:00</div>
            </div>

            <!-- Center Controls -->
            <div class="flex items-center gap-4">
              <% if @recording.diarization_data.blank? && current_user&.admin? %>
                <%= button_to "Diarize", voice_recording_diarization_path(@recording), 
                    method: :post,
                    data: { 
                      turbo_confirm: "Are you sure you want to start diarization? This will identify different speakers in the recording." 
                    },
                    class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg flex items-center gap-2" %>
              <% end %>
              
              <% if policy(@recording).edit? %>
                <%= link_to "Edit", edit_voice_recording_path(@recording), 
                    class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2" %>
              <% end %>
              
              <div class="flex items-center gap-2">
                <label for="zoom" class="text-gray-600">Zoom:</label>
                <input type="range"
                       id="zoom"
                       data-action="input->transcription#zoom"
                       class="w-24 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
                       min="10"
                       max="500"
                       value="250">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Hidden Form Fields -->
    <div class="hidden">
      <input type="text" id="prev-position" value="0">
      <input type="text" id="current-position" value="0">
      <input type="text" id="dictionary_entry_region_id" value="">
      <input type="text" id="dictionary_entry_region_start" value="">
      <input type="text" id="dictionary_entry_region_end" value="">
    </div>

    <!-- Transcription Display -->
    <% if @recording.transcription.present? || @recording.transcription_en.present? %>
      <div class="mb-8">
        <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
          <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
            <p class="text-sm text-gray-600 mt-1"><b>Full Transcription</b>: Use this as reference while transcribing individual segments</p>
          </div>
          <div class="p-4 h-40 overflow-y-auto bg-gray-50 text-sm leading-relaxed text-gray-800">
            <% if @recording.transcription.present? && @recording.transcription_en.present? %>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <%= simple_format(@recording.transcription) %>
                </div>
                <div>
                  <%= simple_format(@recording.transcription_en) %>
                </div>
              </div>
            <% elsif @recording.transcription.present? %>
              <div class="font-medium text-gray-700 mb-1">Original Transcription:</div>
              <%= simple_format(@recording.transcription) %>
            <% else %>
              <div class="font-medium text-blue-700 mb-1">English Translation:</div>
              <%= simple_format(@recording.transcription_en) %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Dictionary Entries Table -->
    <%= turbo_frame_tag "entries-list", data: { controller: "pagination" } do %>
      <%= render "voice_recordings/dictionary_entries/entries_list", entries: @entries, current_user: current_user, pagy: @pagy %>
    <% end %>
  </div>
</div>