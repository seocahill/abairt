<div class="container mx-auto px-4 py-8" data-controller="transcription"
     data-transcription-media-value="<%= url_for(@recording.media) if @recording.media.attached? %>"
     data-transcription-regions-url-value="<%= regions_voice_recording_path(@recording) %>">
  <div class="bg-white rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">
        <%= link_to voice_recording_path(@recording), class: "text-blue-600 hover:text-blue-800" do %>
          Transcribing: <%= @recording.title %>
        <% end %>
      </h1>
    </div>

    <!-- Waveform Player -->
    <div class="mb-8">
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <div class="p-4">
          <div id="waveform" data-transcription-target="waveform" class="w-full h-32"></div>
        </div>
        <div class="border-t border-gray-200 p-4">
          <div class="flex items-center justify-between">
            <!-- Left Controls -->
            <div class="flex items-center gap-4">
              <button id="play-pause-button"
                      data-action="transcription#play"
                      class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 min-w-[100px] justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                </svg>
                <span>Loading...</span>
              </button>
              <div data-transcription-target="time" class="font-mono text-gray-600">0:00</div>
            </div>

            <!-- Center Controls -->
            <div class="flex items-center gap-4">
              <button data-action="transcription#addRegionAtCurrent"
                      class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Add Region
              </button>
              <div class="flex items-center gap-2">
                <label for="zoom" class="text-gray-600">Zoom:</label>
                <input type="range"
                       id="zoom"
                       data-action="input->transcription#zoom"
                       class="w-24 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
                       min="10"
                       max="500"
                       value="250">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Hidden Form Fields -->
    <div class="hidden">
      <input type="text" id="prev-position" value="0">
      <input type="text" id="current-position" value="0">
      <input type="text" id="dictionary_entry_region_id" value="">
      <input type="text" id="dictionary_entry_region_start" value="">
      <input type="text" id="dictionary_entry_region_end" value="">
    </div>

    <!-- Dictionary Entries Table -->
    <div class="mt-8 overflow-x-auto relative shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">Audio</th>
            <th scope="col" class="px-6 py-3">Speaker</th>
            <th scope="col" class="px-6 py-3">Word/Phrase</th>
            <th scope="col" class="px-6 py-3">Translation</th>
            <th scope="col" class="px-6 py-3">Quality</th>
            <th scope="col" class="px-6 py-3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "voice_recordings/dictionary_entries/dictionary_entry",
                     collection: @entries,
                     as: :entry,
                     locals: { current_user: current_user } %>
        </tbody>
      </table>
    </div>

    <%# Pagination footer %>
    <div class="w-full bg-white rounded-md p-4">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>