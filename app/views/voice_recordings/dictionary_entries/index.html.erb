<div class="container mx-auto px-4 py-8" data-controller="transcription"
     data-transcription-media-value="<%= url_for(@recording.media) if @recording.media.attached? %>"
     data-transcription-regions-url-value="<%= regions_voice_recording_path(@recording) %>">
  <div class="bg-white rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">
        <%= link_to voice_recording_path(@recording), class: "text-blue-600 hover:text-blue-800" do %>
          Transcribing: <%= @recording.title %>
        <% end %>
      </h1>
    </div>

    <!-- Waveform Player -->
    <div class="mb-8">
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <div class="p-4">
          <div id="waveform" data-transcription-target="waveform" class="w-full h-32"></div>
        </div>
        <div class="border-t border-gray-200 p-4">
          <div class="flex items-center justify-between">
            <!-- Left Controls -->
            <div class="flex items-center gap-4">
              <button id="play-pause-button"
                      data-action="transcription#play"
                      class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 min-w-[100px] justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                </svg>
                <span>Loading...</span>
              </button>
              <div data-transcription-target="time" class="font-mono text-gray-600">0:00</div>
            </div>

            <!-- Center Controls -->
            <div class="flex items-center gap-4">
              <button data-action="transcription#addRegionAtCurrent"
                      class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Add Region
              </button>
              <button data-action="transcription#slower"
                      class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">
                Slow Down
              </button>
            </div>

            <!-- Right Controls -->
            <div class="flex items-center gap-4">
              <label class="flex items-center gap-2">
                <input type="checkbox"
                       data-transcription-target="gaeSubs"
                       checked
                       class="form-checkbox h-4 w-4 text-blue-600 rounded">
                <span class="text-gray-700">Ga</span>
              </label>
              <label class="flex items-center gap-2">
                <input type="checkbox"
                       data-transcription-target="engSubs"
                       checked
                       class="form-checkbox h-4 w-4 text-blue-600 rounded">
                <span class="text-gray-700">En</span>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Hidden Form Fields -->
    <div class="hidden">
      <input type="text" id="prev-position" value="0">
      <input type="text" id="current-position" value="0">
      <input type="text" id="dictionary_entry_region_id" value="">
      <input type="text" id="dictionary_entry_region_start" value="">
      <input type="text" id="dictionary_entry_region_end" value="">
    </div>

    <!-- Dictionary Entries Table -->
    <div class="mt-8 overflow-x-auto relative shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">Audio</th>
            <th scope="col" class="px-6 py-3">Speaker</th>
            <th scope="col" class="px-6 py-3">Word/Phrase</th>
            <th scope="col" class="px-6 py-3">Translation</th>
            <th scope="col" class="px-6 py-3 flex items-center">
              Quality
              <div class="relative group">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-help-circle ml-1 text-gray-400 hover:text-gray-600"><circle cx="12" cy="12" r="10"></circle><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>
                <div class="absolute hidden group-hover:block bg-gray-500 text-white text-xs rounded py-2 px-4 left-6 transform -translate-x-1/2 w-80 z-10">
                  Quality must be at least fair to appear in the Dictionary. All AI generated transcriptions are 'low' by default.
                </div>
              </div>
            </th>
            <th scope="col" class="px-6 py-3">Versions</th>
            <th scope="col" class="px-6 py-3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "voice_recordings/dictionary_entries/dictionary_entry",
                     collection: @entries,
                     as: :entry,
                     locals: { current_user: current_user } %>
        </tbody>
      </table>
    </div>

    <!-- Subtitles Display -->
    <div class="mt-4 space-y-2 p-4 bg-gray-50 rounded-lg">
      <div class="text-center">
        <p data-transcription-target="transcription" class="text-xl font-medium text-gray-900">~</p>
        <p data-transcription-target="translation" class="text-gray-600 italic">~</p>
      </div>
    </div>

    <%# Pagination footer %>
    <div class="w-full bg-white rounded-md p-4">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>