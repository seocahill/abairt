<tr class="bg-white" id="<%= dom_id(entry) %>">
  <td class="py-2 px-4 border-gray-200"><%= entry.speaker.name %></td>
  <td class="py-2 px-4 border-gray-200"><%= entry.region_start %>:<%= entry.region_end %></td>
  <td class="py-2 px-4 border-gray-200"><%= entry.word_or_phrase %></td>
  <td class="py-2 px-4 border-gray-200"><%= entry.translation %></td>
  <td data-controller="entry" class="py-2 px-4 border-gray-200">
    <a href="#" data-action="entry#play" class="text-blue">
      <audio src="<%= entry.media.url %>"></audio>
      play
    </a>
  </td>
  <td class="py-2 px-4 border-gray-200">
    <%= link_to 'Delete', dictionary_entry_path(entry), method: :delete, data: { "turbo-method": :delete, "turbo-confirm": 'Are you sure?' } %>
  </td>
</tr>
