<% if policy(model).update? %>
  <div class="group relative" data-controller="inline-edit">
    <div data-action="click->inline-edit#showForm" class="cursor-pointer">
      <%= yield %>
    </div>
    <div data-inline-edit-target="form" class="hidden fixed min-w-max bg-white rounded-lg shadow-lg p-4 z-50">
      <%= form_with(model: model, url: voice_recording_dictionary_entry_path(model.voice_recording, model), class: "space-y-4") do |form| %>
        <div>
          <%= form.label method, class: "block text-sm font-medium text-gray-700" %>
          <% if method == :speaker_id %>
            <%= form.select method, 
                options_from_collection_for_select(model.voice_recording.users, :id, :name, model.speaker_id),
                { include_blank: "Choose speaker" },
                { class: "mt-1 block w-64 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
          <% else %>
            <%= form.text_field method, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          <% end %>
        </div>
        <div class="flex justify-end space-x-2">
          <%= form.submit "Save", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <button type="button" data-action="inline-edit#hideForm" class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <%= yield %>
<% end %>