<div class="bg-white rounded-lg shadow p-4 hover:shadow-md transition-all duration-300" id="dictionary_entry_<%= entry.id %>"
     data-controller="inline-edit"
     data-action="turbo:submit-end->inline-edit#submitEnd">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <!-- Display Mode -->
      <div class="mb-2" data-inline-edit-target="display">
        <div class="group relative">
        <% if policy(entry).update? %>
          <p class="text-lg font-medium text-gray-900 cursor-pointer hover:bg-gray-50 px-2 py-1 rounded"
             data-action="click->inline-edit#edit"><%= entry.word_or_phrase %></p>
          <p class="text-gray-600 italic cursor-pointer hover:bg-gray-50 px-2 py-1 rounded"
             data-action="click->inline-edit#edit"><%= entry.translation %></p>
            <button class="absolute top-0 right-0 opacity-0 group-hover:opacity-100 transition-opacity text-gray-400 hover:text-gray-600 p-1"
                    data-action="click->inline-edit#edit"
                    title="Edit">
              <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
              </svg>
            </button>
          <% else %>
            <p class="text-lg font-medium text-gray-900"><%= entry.word_or_phrase %></p>
            <p class="text-gray-600 italic"><%= entry.translation %></p>
          <% end %>
        </div>
      </div>

      <!-- Edit Mode -->
      <div class="mb-2 hidden" data-inline-edit-target="form">
        <%= form_with model: [entry.voice_recording, entry], url: voice_recording_dictionary_entry_path(entry.voice_recording, entry), method: :patch, local: false, data: { turbo: true } do |form| %>
          <div class="space-y-2">
            <%= form.text_field :word_or_phrase,
                class: "w-full text-lg font-medium border border-gray-300 rounded px-2 py-1 focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Word or phrase" %>
            <%= form.text_field :translation,
                class: "w-full text-gray-600 border border-gray-300 rounded px-2 py-1 focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Translation" %>
            <div class="flex gap-2 mt-2">
              <%= form.submit "Save", class: "bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 transition-colors" %>
              <button type="button"
                      class="bg-gray-300 text-gray-700 px-3 py-1 rounded text-sm hover:bg-gray-400 transition-colors"
                      data-action="click->inline-edit#cancel">Cancel</button>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Metadata -->
      <div class="flex items-center space-x-4 text-sm text-gray-500">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
          </svg>
          <span><%= entry.quality.humanize %></span>
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
          </svg>
          <span><%= format_duration(entry.region_start) %> - <%= format_duration(entry.region_end) %></span>
        </div>
        <% if entry.speaker %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
            <span><%= link_to entry.speaker.name, voice_recording_speakers_path(entry.voice_recording), class: "hover:text-blue-600 hover:underline cursor-pointer" %></span>
          </div>
        <% end %>
        <% if entry.versions.any? %>
          <%= link_to dictionary_entry_path(entry), class: "flex items-center text-gray-500 hover:text-gray-700", data: { turbo_frame: "_top" } do %>
            <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            <span>Versions</span>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Play Button -->
    <button class="flex-shrink-0 bg-blue-100 text-blue-600 hover:bg-blue-200 p-2 rounded-full transition-colors duration-200"
            data-controller="audio-player"
            data-action="audio-player#play"
            data-audio-player-url-value="<%= url_for(entry.media) if entry.media.attached? %>"
            data-audio-player-transcription-value="<%= entry.word_or_phrase %>"
            data-audio-player-translation-value="<%= entry.translation %>">
      <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
</div>