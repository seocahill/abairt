<div class="mt-8 overflow-x-auto relative shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">Audio</th>
        <th scope="col" class="px-6 py-3">Speaker</th>
        <th scope="col" class="px-6 py-3">Word/Phrase</th>
        <th scope="col" class="px-6 py-3">Translation</th>
        <th scope="col" class="px-6 py-3">Translator</th>
        <th scope="col" class="px-6 py-3">Quality</th>
        <th scope="col" colspan="2" class="px-6 py-3 text-center"></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "voice_recordings/dictionary_entries/dictionary_entry",
                 collection: entries,
                 as: :entry,
                 locals: { current_user: current_user } %>
    </tbody>
  </table>
</div>

<!-- Pagination footer with Turbo frame navigation -->
<% if pagy.pages > 1 %>
  <div class="w-full bg-white rounded-md p-4">
    <div class="flex items-center justify-between">
      <div class="text-sm text-gray-700">
        Showing <span class="font-medium"><%= pagy.from %></span> to
        <span class="font-medium"><%= pagy.to %></span> of
        <span class="font-medium"><%= pagy.count %></span> entries
      </div>
      <div class="flex space-x-2">
        <% if pagy.prev %>
          <%= link_to "Previous", voice_recording_dictionary_entries_path(voice_recording_id: params[:voice_recording_id], page: pagy.prev),
              class: "px-4 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50",
              data: { 
                turbo_frame: "entries-list",
                action: "click->pagination#updateUrl",
                pagination_page_value: pagy.prev
              } %>
        <% end %>
        <% if pagy.next %>
          <%= link_to "Next", voice_recording_dictionary_entries_path(voice_recording_id: params[:voice_recording_id], page: pagy.next),
              class: "px-4 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50",
              data: { 
                turbo_frame: "entries-list",
                action: "click->pagination#updateUrl",
                pagination_page_value: pagy.next
              } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %> 