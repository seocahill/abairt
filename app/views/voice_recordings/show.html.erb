<!-- Main Container -->
<div class="flex flex-col md:flex-row min-h-screen">
  <!-- Left Side - Media Player and Controls -->
  <div class="w-full md:w-1/2 h-screen flex flex-col bg-white border-r">
    <div class="p-6">
      <!-- Media Player -->
      <%= render "waveform" %>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 gap-4 mt-6">
        <!-- Recording Title & Description -->
        <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <h1 class="text-lg font-semibold text-gray-900"><%= @recording.title %></h1>
              <% if @recording.description.present? %>
                <p class="mt-1 text-sm text-gray-600"><%= @recording.description %></p>
              <% else %>
                <p class="mt-1 text-sm text-gray-600">No description</p>
              <% end %>
            </div>
            <% if policy(@recording).edit? %>
              <%= link_to edit_voice_recording_path(@recording),
                  class: "ml-4 text-gray-400 hover:text-gray-600 transition-colors flex-shrink-0" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Duration -->
        <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between">
            <h3 class="text-sm font-semibold text-gray-700">Duration</h3>
            <span class="text-xl font-bold text-blue-600">
              <%= format_duration(@recording.dictionary_entries.maximum(:region_end)) %>
            </span>
          </div>
        </div>

        <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between">
            <h3 class="text-sm font-semibold text-gray-700" title="Diarized using pyannote and transcribed using abair.ie">Automatic Transcriptions</h3>
            <span class="text-xl font-bold text-blue-600"><%= @recording.dictionary_entries.count %></span>
          </div>
        </div>

        <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between">
            <h3 class="text-sm font-semibold text-gray-700" title="These segments have been validated by a speaker with B2 level Irish or higher">Validated</h3>
            <span class="text-xl font-bold text-green-600">
              <%= @recording.dictionary_entries.where(quality: ['good', 'excellent']).count %>
            </span>
          </div>
        </div>

        <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between">
            <h3 class="text-sm font-semibold text-gray-700">Completion</h3>
            <span class="text-xl font-bold text-purple-600">
              <%= number_to_percentage(
                @recording.dictionary_entries.count > 0 ?
                (@recording.dictionary_entries.where(quality: ['good', 'excellent']).count.to_f / @recording.dictionary_entries.count * 100) : 0,
                precision: 1
              ) %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Side - Dictionary Entries -->
  <div class="w-full md:w-1/2 h-screen flex flex-col">
    <!-- Header -->
    <div class="p-6 bg-white border-b">
      <div class="flex justify-between items-center">
        <h2 class="text-xl font-semibold text-gray-900">Transcription Segments</h2>
        <% if policy(@recording).update? %>
          <%= link_to voice_recording_dictionary_entries_path(@recording),
              class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center space-x-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>
            <span>Edit Segments</span>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Dictionary Entries List - Scrollable -->
    <div class="flex-1 overflow-y-auto p-6" data-controller="infinite-scroll">
      <div id="entries-container" class="space-y-4" data-infinite-scroll-target="container">
        <%= render partial: "voice_recordings/dictionary_entries/entry", collection: @entries %>
      </div>

      <!-- Pagination -->
      <%= render "shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>