<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900"><%= @recording.title %></h1>
      <% if policy(@recording).edit? %>
        <%= link_to edit_voice_recording_path(@recording), class: "text-blue-600 hover:text-blue-800" do %>
          <i data-feather="edit"></i>
        <% end %>
      <% end %>
    </div>

    <%= render "waveform" %>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
      <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-700">Total Segments</h3>
          <span class="text-2xl font-bold text-blue-600"><%= @recording.dictionary_entries.count %></span>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-700">Completed Segments</h3>
          <span class="text-2xl font-bold text-green-600">
            <%= @recording.dictionary_entries.where(quality: ['good', 'excellent']).count %>
          </span>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-700">Completion Rate</h3>
          <span class="text-2xl font-bold text-purple-600">
            <%= number_to_percentage(
              @recording.dictionary_entries.count > 0 ?
              (@recording.dictionary_entries.where(quality: ['good', 'excellent']).count.to_f / @recording.dictionary_entries.count * 100) : 0,
              precision: 1
            ) %>
          </span>
        </div>
      </div>
    </div>

    <div class="mt-8 flex justify-center">
      <%= link_to voice_recording_dictionary_entries_path(@recording),
          class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-lg flex items-center space-x-3 transform hover:scale-105 transition-transform duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>
        <span>View or Edit Transcription Segments</span>
      <% end %>
    </div>

    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4">Recording Details</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700">
        <div>
          <p><strong>Created:</strong> <%= @recording.created_at.strftime("%B %d, %Y") %></p>
          <p><strong>Duration:</strong> <%= format_duration(@recording.dictionary_entries.maximum(:region_end)) %></p>
        </div>
        <div>
          <p><strong>Owner:</strong> <%= @recording.owner.name %></p>
          <p><strong>Last Updated:</strong> <%= time_ago_in_words(@recording.updated_at) %> ago</p>
        </div>
      </div>
    </div>
  </div>
</div>