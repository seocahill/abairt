<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Service Status</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- TTS Service Status -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Text-to-Speech (TTS)</h2>
        <div class="flex items-center space-x-2">
          <% if @tts_status&.up? %>
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <span class="text-green-600 font-medium">Operational</span>
          <% else %>
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <span class="text-red-600 font-medium">Down</span>
          <% end %>
        </div>
      </div>
      
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">Last Check:</span>
          <span class="font-medium">
            <%= @tts_status ? time_ago_in_words(@tts_status.created_at) + ' ago' : 'Never' %>
          </span>
        </div>
        
        <% if @tts_status&.response_time %>
          <div class="flex justify-between">
            <span class="text-gray-600">Response Time:</span>
            <span class="font-medium"><%= @tts_status.response_time.round(2) %>ms</span>
          </div>
        <% end %>
        
        <div class="flex justify-between">
          <span class="text-gray-600">24h Uptime:</span>
          <span class="font-medium"><%= @tts_uptime %>%</span>
        </div>
        
        <% if @tts_status&.error_message %>
          <div class="mt-3 p-3 bg-red-50 border border-red-200 rounded">
            <p class="text-sm text-red-700"><%= @tts_status.error_message %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- ASR Service Status -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Speech Recognition (ASR)</h2>
        <div class="flex items-center space-x-2">
          <% if @asr_status&.up? %>
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <span class="text-green-600 font-medium">Operational</span>
          <% else %>
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <span class="text-red-600 font-medium">Down</span>
          <% end %>
        </div>
      </div>
      
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">Last Check:</span>
          <span class="font-medium">
            <%= @asr_status ? time_ago_in_words(@asr_status.created_at) + ' ago' : 'Never' %>
          </span>
        </div>
        
        <% if @asr_status&.response_time %>
          <div class="flex justify-between">
            <span class="text-gray-600">Response Time:</span>
            <span class="font-medium"><%= @asr_status.response_time.round(2) %>ms</span>
          </div>
        <% end %>
        
        <div class="flex justify-between">
          <span class="text-gray-600">24h Uptime:</span>
          <span class="font-medium"><%= @asr_uptime %>%</span>
        </div>
        
        <% if @asr_status&.error_message %>
          <div class="mt-3 p-3 bg-red-50 border border-red-200 rounded">
            <p class="text-sm text-red-700"><%= @asr_status.error_message %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Service History -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- TTS History -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">TTS Service History (Last 24h)</h3>
      <div class="space-y-2">
        <% @tts_history.each do |status| %>
          <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 <%= status.up? ? 'bg-green-500' : 'bg-red-500' %> rounded-full"></div>
              <span class="text-sm text-gray-600"><%= status.created_at.strftime('%H:%M') %></span>
            </div>
            <div class="text-sm text-gray-500">
              <% if status.response_time %>
                <%= status.response_time.round(2) %>ms
              <% else %>
                -
              <% end %>
            </div>
          </div>
        <% end %>
        <% if @tts_history.empty? %>
          <p class="text-gray-500 text-sm">No recent data</p>
        <% end %>
      </div>
    </div>

    <!-- ASR History -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">ASR Service History (Last 24h)</h3>
      <div class="space-y-2">
        <% @asr_history.each do |status| %>
          <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 <%= status.up? ? 'bg-green-500' : 'bg-red-500' %> rounded-full"></div>
              <span class="text-sm text-gray-600"><%= status.created_at.strftime('%H:%M') %></span>
            </div>
            <div class="text-sm text-gray-500">
              <% if status.response_time %>
                <%= status.response_time.round(2) %>ms
              <% else %>
                -
              <% end %>
            </div>
          </div>
        <% end %>
        <% if @asr_history.empty? %>
          <p class="text-gray-500 text-sm">No recent data</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-8 text-center">
    <p class="text-sm text-gray-500">
      Services are monitored every hour. Last updated: <%= Time.current.strftime('%Y-%m-%d %H:%M:%S') %>
    </p>
  </div>
</div> 