<div class="min-h-screen py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-gray-50 mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
      <div class="max-w-md mx-auto">
        <div class="flex items-center space-x-5">
          <div class="block pl-2 font-semibold text-xl self-start">
            <h2 class="leading-relaxed">Rang Ãšr</h2>
          </div>
        </div>
        <div class="divide-y">
          <%= form_with(model: rang) do |form| %>
            <% if rang.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(rang.errors.count, "error") %> prohibited this rang from being saved:</h2>
                <ul>
                  <% rang.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
              <div class="flex flex-col">
                <label class="leading-loose">Classname</label>
                <%= form.text_field :name, class: "px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600", placeholder: "Classname" %>
              </div>
            </div>
            <%= form.fields_for :users do |user_form| %>
              <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                <div class="flex flex-col">
                  <label class="leading-loose">Student Name</label>
                  <%= user_form.text_field :name, class: "px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600", placeholder: "Jams O'Donnell" %>
                </div>
                <div class="flex flex-col">
                  <label class="leading-loose">Student Email</label>
                  <%= user_form.email_field :email, class: "px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600", placeholder: "student@email.com" %>
                </div>
                <div class="flex flex-col">
                  <label class="leading-loose">Student Password</label>
                  <%= user_form.text_field :password, class: "px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600", value: SecureRandom.alphanumeric %>
                </div>
              </div>
            <% end %>
            <div class="pt-4 flex items-center space-x-4">
              <button class="bg-blue-500 flex justify-center items-center w-full text-white px-4 py-3 rounded-md focus:outline-none">Save</button>
            </div>
            <%= link_to 'Back', rangs_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
