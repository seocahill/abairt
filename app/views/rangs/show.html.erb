<p>
  <strong>Name:</strong>
  <%= @rang.name %> <%= @rang.created_at.to_s(:short) %>
</p>
<p>
  <%= link_to 'Edit', edit_rang_path(@rang) %> |
  <%= link_to 'Back', rangs_path %>
</p>
<% if current_user %>
  <%= turbo_frame_tag "new_dictionary_entry", src: new_rang_dictionary_entry_path(@rang), target: "_top" %>
<% end %>
<div class="table w-full">
  <div class="table-header-group">
    <div class="table-row">
      <div class="table-cell"><b>Word or phrase</b></div>
      <div class="table-cell"><b>Translation</b></div>
      <div class="table-cell"><b>Notes</b></div>
      <div class="table-cell"><b>Media</b></div>
      <div class="table-cell"></div>
      <div class="table-cell"></div>
    </div>
  </div>
  <% if current_user %>
    <div id="current_user_dictionary_entries" class="table-row-group">
      <%= render @rang.dictionary_entries %>
    </div>
  <% else %>
    <%= turbo_stream_from "dictionary_entries" %>
    <div id="dictionary_entries" class="table-row-group">
      <%= render @rang.dictionary_entries %>
    </div>
  <% end %>
</div>
