<%= content_tag :div, data: { controller: 'tts' } do %>
  <%= form.hidden_field :script, data: { target: 'tts.word' } %>
  <%= form.file_field :media, hidden: true, direct_upload: true, data: { target: 'tts.input' } %>
  <button class='bg-yellow-300 hover:bg-yellow-500 text-white font-bold py-2 px-4 rounded' data-action='click->tts#synthesizeAndUpload' data-turbo-submits-with="Processing...">Synthesize and Upload</button>
<% end %>
