<%= turbo_frame_tag dom_id(dictionary_entry), class: "table-row" do %>
  <div class="table-cell px-6 py-4"><%= dictionary_entry.word_or_phrase %></div>
  <div data-target="rang.cell" class="table-cell px-6 py-4"><%= dictionary_entry.translation %></div>
  <div data-target="rang.cell" class="table-cell px-6 py-4"><%= dictionary_entry.notes %></div>
  <div data-target="rang.cell" class="table-cell px-6 py-4">
    <% if dictionary_entry.media.attached? && (dictionary_entry.media.audio? ||  dictionary_entry.media.video?) %>
      <%= tag :audio, src: url_for(dictionary_entry.media), controls: true, preload: :none, class: 'mt-3', data: { target: "rang.cell" } %>
    <% end %>
  </div>
  <% if current_user %>
    <div data-target="rang.cell" class="table-cell px-6 py-4">
      <div class="relative inline-block text-left" data-controller="entry">
        <div>
          <button type="button" data-action="click->entry#show" class="inline-flex px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="options-menu" aria-expanded="true" aria-haspopup="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
            </svg>
          </button>
        </div>
        <div data-action="click->entry#show" data-target="entry.dropdown" class="hidden origin-top-right absolute right-20 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
          <div class="py-1" role="none">
            <%= link_to "Edit", edit_dictionary_entry_path(dictionary_entry), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" %>
            <%= button_to 'Destroy', dictionary_entry_path(dictionary_entry), method: :delete, class: "block bg-white background-transparent px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" %>
            <%= button_to 'Ceist?', ceist_path(dictionary_entry), method: :patch, remote: true, params: { id: dictionary_entry.id }, class: "block bg-white background-transparent px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" %>
          </div>
        </div>
      </div>
    </div>
    <div data-target="rang.cell" class="table-cell px-6 py-4">
      <% if dictionary_entry.ceist? %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  <% end %>
<% end %>
