<!-- app/views/courses/show.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold mb-2"><%= @course.name %></h2>
    <p class="text-gray-700 mb-4">
      <%= raw CGI.unescape_element @course.description.body.to_s, ['iframe'] %>
      <%= link_to 'Edit', edit_course_path(@course), class: "underline text-blue-500" %>
    </p>
    <hr class="mt-2">
    <div class="divide-y divide-gray-200">
      <% @course.items.each do |item| %>
        <div class="py-4 flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <h3 class="text-xl font-semibold"><%= item.name %></h3>
            <p><%= item.description %></p>
            <%= link_to 'Edit', edit_item_path(item), class: "underline text-blue-500" %>
          </div>
          <%= link_to 'View', item_path(item), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-center md:self-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
