<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl font-bold text-gray-900">Ríomhphoist Riaracháin</h1>
          <%= link_to "Ríomhphost Nua", new_admin_email_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ábhar</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cruthaithe</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Seolta</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stádas</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Gníomhartha</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @emails.any? %>
              <% @emails.each do |email| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= email.subject %></div>
                    <div class="text-sm text-gray-500">
                      <%= truncate(strip_tags(email.rich_content.to_s), length: 60) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= email.created_at.strftime("%d/%m/%Y %H:%M") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= email.sent_at&.strftime("%d/%m/%Y %H:%M") || "—" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if email.sent? %>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Seolta</span>
                    <% else %>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Dréacht</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                    <%= link_to "Féach", admin_email_path(email), class: "text-blue-600 hover:text-blue-900" %>
                    <% unless email.sent? %>
                      <%= link_to "Cuir in Eagar", edit_admin_email_path(email), class: "text-indigo-600 hover:text-indigo-900" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                  Níl aon ríomhphost ann fós. <%= link_to "Cruthaigh ceann", new_admin_email_path, class: "text-blue-600 hover:text-blue-800" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>