# syntax=docker/dockerfile:1

# Use a Ruby base image suitable for development
ARG RUBY_VERSION=3.4.1
FROM docker.io/library/ruby:$RUBY_VERSION-slim AS base

# Set the working directory
WORKDIR /rails

# Install base packages and development tools
RUN apt-get update -qq && \
  apt-get install --no-install-recommends -y \
  curl \
  build-essential \
  ffmpeg \
  git \
  pkg-config \
  libjemalloc2 \
  libvips \
  sqlite3 \
  nodejs \
  npm && \
  rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Set environment variables for development
ENV RAILS_ENV="development" \
  BUNDLE_PATH="/usr/local/bundle"

# Install application gems including development and test groups
COPY Gemfile Gemfile.lock package.json package-lock.json ./
RUN gem install bundler && \
  bundle install && \
  npm install

# Copy the application code
COPY . .

# Precompile assets for development
RUN SECRET_KEY_BASE_DUMMY=1 ./bin/rails assets:precompile

# Expose the default Rails port
EXPOSE 3000

# Set the entrypoint to start the Rails server
CMD ["bin/rails", "server", "-b", "0.0.0.0"]